{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDirs": [
      "../",
      "./node_modules"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/old/**/*.ts"
  ]
}
